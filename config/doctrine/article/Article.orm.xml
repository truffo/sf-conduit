<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Article\Domain\Article" table="article">
        <id name="id" type="string" column="id">
        </id>
        <field name="slug" type="string" nullable="false" />
        <field name="title" type="string" nullable="false" />
        <field name="description" type="string" nullable="false" />
        <field name="body" type="string" nullable="false" />
    </entity>
</doctrine-mapping>